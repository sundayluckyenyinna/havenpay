generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Bvn {
  id          Int      @id @default(autoincrement())
  customerBvn String
  firstName   String
  middleName  String
  lastName    String
  imageBase64 String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Customer {
  id             Int      @id @default(autoincrement())
  otp            String
  fullName       String
  phoneNumber    String   @unique
  emailAddress   String
  nin            String
  referralCode   String
  password       String
  transactionPin String
  createdAt      DateTime
}
